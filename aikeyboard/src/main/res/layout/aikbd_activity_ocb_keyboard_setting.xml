                    android:layout_centerVertical="true"
                    android:layout_marginRight="11dp"
                    android:layout_toLeftOf="@+id/arrow_kind"
                    android:layout_toRightOf="@+id/kind_title"
                    android:gravity="right"
                    android:textColor="@color/aikbd_light_gray4"
