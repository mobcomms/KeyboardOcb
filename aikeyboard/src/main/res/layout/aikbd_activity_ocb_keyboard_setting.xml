                        android:layout_width="35dp"
                        android:layout_height="30dp"
                        android:layout_centerInParent="true" />

                    <TextView
                        android:id="@+id/matched_emoji"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:maxLines="1"
                        android:textColor="#000000"
                        android:textSize="24dp" />

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_centerInParent="true" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/timedeal_tab"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:soundEffectsEnabled="false">

                    <ImageView
                        android:id="@+id/img_timedeal"
                        android:layout_width="35dp"
                        android:layout_height="30dp"
                        android:layout_centerInParent="true" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/shopping_tab"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:soundEffectsEnabled="false">

                    <ImageView
                        android:id="@+id/img_shopping"
                        android:layout_width="35dp"
                        android:layout_height="30dp"
                        android:visibility="gone"
                        android:layout_centerInParent="true" />

                    <RelativeLayout
                        android:id="@+id/offerwall_tab"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:soundEffectsEnabled="false">

                        <ImageView
                            android:id="@+id/img_offerwall"
                            android:layout_width="35dp"
                            android:layout_height="30dp"
                            android:layout_centerInParent="true"
                            android:background="@drawable/aikbd_btn_ppzon_icon" />

                    </RelativeLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/game_tab"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:visibility="gone"
                    android:soundEffectsEnabled="false">

                    <ImageView
                        android:id="@+id/img_game"
                        android:layout_width="35dp"
                        android:layout_height="30dp"
                        android:layout_centerInParent="true"
                        android:background="@drawable/aikbd_btn_save_gamezone_icon" />

                </RelativeLayout>
<!--                <RelativeLayout-->
<!--                    android:id="@+id/chat_tab"-->
<!--                    android:layout_width="0dp"-->
<!--                    android:layout_height="match_parent"-->
<!--                    android:layout_weight="1"-->
<!--                    android:soundEffectsEnabled="false">-->

<!--                    <ImageView-->
<!--                        android:id="@+id/img_chat"-->
<!--                        android:layout_width="wrap_content"-->
<!--                        android:layout_height="wrap_content"-->
<!--                        android:layout_centerInParent="true"-->
<!--                        android:background="@drawable/aikbd_chat_gpt_normal" />-->


<!--                </RelativeLayout>-->

                <RelativeLayout
                    android:id="@+id/second_tab"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:soundEffectsEnabled="false">

                    <ImageView
