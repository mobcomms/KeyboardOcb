                    <!--</RelativeLayout>-->

                </LinearLayout>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#e8e8ea"
                android:layout_below="@+id/top_layer"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="7dp"
                android:background="#f4f4f4"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="92dp"
                android:background="#ffffff"
                android:paddingLeft="24dp"
                android:paddingRight="24dp">

                <RelativeLayout
                    android:id="@+id/change_sound_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp">

                    <ImageView
                        android:id="@+id/sound_kind_arrow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/aikbd_ico_12_arrow_right" />

                    <TextView
                        android:id="@+id/sound_kind_txt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:layout_centerVertical="true"
                        android:layout_marginRight="11dp"
                        android:layout_toLeftOf="@+id/sound_kind_arrow"
                        android:layout_toRightOf="@+id/sound_kind_title"
