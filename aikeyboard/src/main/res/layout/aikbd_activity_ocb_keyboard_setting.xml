            app:layout_constraintTop_toTopOf="parent"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ppz_guide_layer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintLeft_toLeftOf="@+id/third"
            app:layout_constraintRight_toRightOf="@+id/third"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="35dp">

            <ImageView
                android:layout_width="14dp"
                android:layout_height="7dp"
                android:id="@+id/ppz_arrow"
                android:background="@drawable/aikbd_guide_triangle"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="42dp"
                android:orientation="horizontal"
                android:paddingLeft="8dp"
                android:paddingRight="12dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ppz_arrow"
                android:background="@drawable/aikbd_guide_black_bg">
                
                <ImageView
                    android:layout_width="31dp"
                    android:layout_height="26dp"
                    android:background="@drawable/aikbd_btn_ppzon_icon"
                    android:layout_gravity="center_vertical"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:layout_gravity="center_vertical"
                    android:includeFontPadding="false"
                    android:textColor="#ffffff"
                    android:text="참여하고 포인트 더 받기"/>
            </LinearLayout>
            
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/gpt_guide_layer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintLeft_toLeftOf="@+id/fourth"
            app:layout_constraintRight_toRightOf="@+id/fourth"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="35dp">

            <ImageView
                android:layout_width="14dp"
                android:layout_height="7dp"
                android:id="@+id/gpt_arrow"
                android:background="@drawable/aikbd_guide_triangle"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="42dp"
                android:orientation="horizontal"
                android:paddingLeft="8dp"
                android:paddingRight="12dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/gpt_arrow"
                android:background="@drawable/aikbd_guide_black_bg">


                <ImageView
                    android:layout_width="30.3dp"
                    android:layout_height="26dp"
                    android:background="@drawable/aikbd_btn_save_gamezone_icon"
                    android:layout_gravity="center_vertical"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:layout_gravity="center_vertical"
                    android:includeFontPadding="false"
                    android:textColor="#ffffff"
                    android:text="미션 참여하고 포인트 받기"/>

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>


    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/keyboard_total_layer"
        android:layout_below="@+id/line_2"
        android:background="#f4f4f4">

        <LinearLayout
