        <View
            android:id="@+id/second"
            android:layout_width="0dp"
            android:layout_height="1dp"
            app:layout_constraintEnd_toStartOf="@+id/third"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_weight="1"
