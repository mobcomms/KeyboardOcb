<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="left"
    android:adjustViewBounds="true"
    android:background="@drawable/mobon_banner_theme3_gray_border"
    android:gravity="left">

    <LinearLayout
        android:id="@+id/image_layout"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="1dp">

        <ImageView
            android:id="@+id/t_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:contentDescription="" />
    </LinearLayout>
    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_toRightOf="@+id/image_layout"
        android:background="#d6d2d0"
        />

    <RelativeLayout
        android:id="@+id/logo_layout"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="11dp"
        android:layout_marginBottom="5dp"
        android:layout_toRightOf="@+id/image_layout"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/mark_img"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:contentDescription="" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/content_line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="11dp"
        android:layout_marginBottom="10dp"
        android:layout_toRightOf="@+id/image_layout"
        android:layout_below="@+id/logo_layout"
        android:src="@drawable/mobon_banner_theme4_blue_line"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="30dp"
        android:layout_toRightOf="@+id/content_line"
        android:layout_below="@+id/logo_layout"
        android:orientation="vertical">

        <TextView
            android:id="@+id/t_title"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="2"
            android:textColor="#1f2020"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/t_price"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="left"
            android:layout_weight="0.4"
            android:gravity="top|left"
            android:maxLines="1"
            android:textColor="#3184af"
            android:textSize="14dp"
            android:layout_margin="3dp"
            android:textStyle="bold" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="4dp"
            android:src="@drawable/mobon_banner_theme4_gray_note" />

        <ImageView
            android:id="@+id/mobon_mark"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/btn_mobon"
            android:layout_marginTop="4dp"
            android:layout_marginRight="13dp"
            />
