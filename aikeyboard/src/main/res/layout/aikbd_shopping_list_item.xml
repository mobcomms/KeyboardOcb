<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:paddingLeft="24dp"
    android:paddingRight="24dp"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/headerLayer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="10dp">

        <TextView
            android:id="@+id/headerTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            tools:text="오사라마켓"
            android:textStyle="bold"
            android:textSize="14dp"
            android:textColor="#000000"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <View
            android:id="@+id/div"
            android:layout_width="0dp"
            android:layout_height="1dp"
            app:layout_constraintLeft_toLeftOf="@+id/headerTitle"
            app:layout_constraintRight_toRightOf="@+id/headerTitle"
            app:layout_constraintTop_toBottomOf="@+id/headerTitle"
            android:layout_marginTop="2dp"
            android:background="#000000"/>

        <TextView
            android:id="@+id/txtTotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            app:layout_constraintTop_toTopOf="@+id/headerTitle"
            app:layout_constraintBottom_toBottomOf="@+id/headerTitle"
            app:layout_constraintLeft_toRightOf="@+id/headerTitle"
            android:layout_marginLeft="10dp"
            android:textColor="#979797"
            android:textSize="14dp"
            tools:text="총 (32)"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/s_itemLayer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginRight="20dp">

            <ImageView
                android:id="@+id/s_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/s_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:singleLine="true"
                android:ellipsize="end"
                android:textColor="#000000"
                android:textSize="14dp"
                android:includeFontPadding="false"
                android:layout_marginBottom="3dp"
                tools:text="에슐리 바샥 촉촉 봉골레 크림 파스타"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="9dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/s_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    android:textColor="#000000"
                    android:includeFontPadding="false"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    tools:text="14,550"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="1dp"
                    android:id="@+id/s_price_won"
                    android:textSize="13dp"
                    android:textColor="#000000"
                    android:includeFontPadding="false"
                    app:layout_constraintTop_toTopOf="@+id/s_price"
                    app:layout_constraintBottom_toBottomOf="@+id/s_price"
                    app:layout_constraintLeft_toRightOf="@+id/s_price"
                    android:text="원"/>

                <TextView
                    android:id="@+id/s_originPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:textColor="#acacac"
                    android:includeFontPadding="false"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toRightOf="@+id/s_price_won"
                    android:layout_marginLeft="4dp"
                    tools:text="14,550"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="1dp"
                    android:id="@+id/s_originPriceWon"
                    android:textSize="13dp"
                    android:textColor="#acacac"
                    android:includeFontPadding="false"
                    app:layout_constraintTop_toTopOf="@+id/s_originPrice"
                    app:layout_constraintBottom_toBottomOf="@+id/s_originPrice"
                    app:layout_constraintLeft_toRightOf="@+id/s_originPrice"
                    android:text="원"/>

                <View
                    android:id="@+id/s_c_line"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:background="#acacac"
                    app:layout_constraintTop_toTopOf="@+id/s_originPrice"
                    app:layout_constraintBottom_toBottomOf="@+id/s_originPrice"
                    app:layout_constraintLeft_toLeftOf="@+id/s_originPrice"
                    app:layout_constraintRight_toRightOf="@+id/s_originPriceWon"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/s_pointLayer">

                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:id="@+id/s_pointIcon"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:background="@drawable/kb_common_point_icon"
                    android:layout_marginRight="2dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="1dp"
                    android:id="@+id/s_point"
                    android:textSize="13dp"
                    android:textColor="#ff004e"
                    android:textStyle="bold"
                    android:includeFontPadding="false"
                    app:layout_constraintTop_toTopOf="@+id/s_pointIcon"
                    app:layout_constraintBottom_toBottomOf="@+id/s_pointIcon"
                    app:layout_constraintLeft_toRightOf="@+id/s_pointIcon"
                    android:layout_marginRight="1dp"
                    tools:text="5,000"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="1dp"
                    android:textSize="12dp"
                    android:textColor="#828282"
                    android:includeFontPadding="false"
                    app:layout_constraintTop_toTopOf="@+id/s_pointIcon"
                    app:layout_constraintBottom_toBottomOf="@+id/s_pointIcon"
                    app:layout_constraintLeft_toRightOf="@+id/s_point"
                    android:text="적립"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/o_itemLayer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:visibility="gone"
        android:layout_marginBottom="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#ffffff">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/imageLayer"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginRight="20dp"
                android:layout_centerVertical="true">

                <ImageView
                    android:id="@+id/o_image"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:scaleType="fitCenter"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <View
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:background="@drawable/bg_shape"
                    app:layout_constraintBottom_toBottomOf="@+id/o_image"
                    app:layout_constraintLeft_toLeftOf="@+id/o_image"
                    app:layout_constraintRight_toRightOf="@+id/o_image"
                    app:layout_constraintTop_toTopOf="@+id/o_image" />


            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/live_layer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="3dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/status"
                        android:layout_width="27dp"
                        android:layout_height="15dp"
                        android:background="@drawable/aikbd_img_live_text_onair" />

                    <View
                        android:layout_width="6dp"
                        android:layout_height="6dp"
                        android:layout_marginLeft="3dp"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/aikbd_live_dot"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/status_kor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:includeFontPadding="false"
                        android:text="방송중"
                        android:layout_marginRight="4dp"
                        android:textColor="#ed3560"
                        android:textSize="12dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/o_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:includeFontPadding="false"
                        android:textColor="#000000"
                        android:textSize="12dp"
                        android:textStyle="bold"
                        tools:text="00:34:54"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/o_title"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:letterSpacing="-0.04"
                    android:gravity="center_vertical"
                    android:lineSpacingExtra="-4dp"
                    android:textColor="#000000"
                    android:textSize="13dp"
                    android:includeFontPadding="false"
                    tools:text="나의 거친 피부와 불안한 각질들을 위한 최고의 선택! 코스알엑스"/>

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/t_itemLayer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginRight="20dp">

            <ImageView
                android:id="@+id/t_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            <TextView
                android:id="@+id/t_time"
                android:layout_width="match_parent"
                android:layout_height="18dp"
                android:background="#fe0955"
                android:layout_alignParentBottom="true"
                android:gravity="center"
                android:includeFontPadding="false"
                android:textColor="#ffffff"
                android:textSize="12dp"
                android:textStyle="bold"
                tools:text="10:36:44"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/t_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:singleLine="true"
                android:ellipsize="end"
                android:textColor="#000000"
                android:textSize="14dp"
                android:includeFontPadding="false"
                android:layout_marginBottom="3dp"
                tools:text="에슐리 바샥 촉촉 봉골레 크림 파스타"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="9dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/t_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    android:textColor="#000000"
                    android:includeFontPadding="false"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    tools:text="14,550"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="1dp"
                    android:id="@+id/t_price_won"
                    android:textSize="13dp"
                    android:textColor="#000000"
                    android:includeFontPadding="false"
                    app:layout_constraintTop_toTopOf="@+id/t_price"
                    app:layout_constraintBottom_toBottomOf="@+id/t_price"
                    app:layout_constraintLeft_toRightOf="@+id/t_price"
                    android:text="원"/>

                <TextView
                    android:id="@+id/t_originPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:textColor="#acacac"
                    android:includeFontPadding="false"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toRightOf="@+id/t_price_won"
                    android:layout_marginLeft="4dp"
                    tools:text="14,550"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="1dp"
                    android:id="@+id/t_originPriceWon"
                    android:textSize="13dp"
                    android:textColor="#acacac"
                    android:includeFontPadding="false"
                    app:layout_constraintTop_toTopOf="@+id/t_originPrice"
                    app:layout_constraintBottom_toBottomOf="@+id/t_originPrice"
                    app:layout_constraintLeft_toRightOf="@+id/t_originPrice"
                    android:text="원"/>

                <View
                    android:id="@+id/t_c_line"
                    android:layout_width="0dp"
                    android:layout_height="1px"
                    android:background="#acacac"
                    app:layout_constraintTop_toTopOf="@+id/t_originPrice"
                    app:layout_constraintBottom_toBottomOf="@+id/t_originPrice"
                    app:layout_constraintLeft_toLeftOf="@+id/t_originPrice"
                    app:layout_constraintRight_toRightOf="@+id/t_originPriceWon"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/t_pointLayer">

                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:id="@+id/t_pointIcon"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:background="@drawable/kb_common_point_icon"
                    android:layout_marginRight="2dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="1dp"
                    android:id="@+id/t_point"
                    android:textSize="13dp"
                    android:textColor="#ff004e"
                    android:textStyle="bold"
                    android:includeFontPadding="false"
                    app:layout_constraintTop_toTopOf="@+id/t_pointIcon"
                    app:layout_constraintBottom_toBottomOf="@+id/t_pointIcon"
                    app:layout_constraintLeft_toRightOf="@+id/t_pointIcon"
                    android:layout_marginRight="1dp"
                    tools:text="5,000"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="1dp"
                    android:textSize="12dp"
                    android:textColor="#828282"
                    android:includeFontPadding="false"
                    app:layout_constraintTop_toTopOf="@+id/t_pointIcon"
                    app:layout_constraintBottom_toBottomOf="@+id/t_pointIcon"
                    app:layout_constraintLeft_toRightOf="@+id/t_point"
                    android:text="적립"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

    </LinearLayout>

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#f7f7f7"/>

    <TextView
        android:id="@+id/txtMore"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textSize="14dp"
        android:textColor="#868686"
        android:gravity="center"
        android:includeFontPadding="false"/>

</LinearLayout>