                                app:layout_constraintTop_toTopOf="parent" />

                            <View
                                android:id="@+id/dot_left_domestic"
                                android:layout_width="3dp"
                                android:layout_height="3dp"
                                android:layout_marginLeft="6dp"
                                app:layout_constraintLeft_toRightOf="@+id/tab_homeshopping"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                android:background="@drawable/aikbd_mid_dot_gray"
                                android:layout_gravity="center_vertical"/>

                            <TextView
                                android:id="@+id/tab_domestic"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:text="국내쇼핑"
                                android:includeFontPadding="false"
                                android:textSize="13dp"
                                android:gravity="center"
                                app:layout_constraintLeft_toRightOf="@+id/dot_left_domestic"
                                app:layout_constraintTop_toTopOf="parent"
                                android:layout_marginLeft="6dp"
                                android:textColor="#bfbfbf"/>

                            <View
                                android:id="@+id/dot_left_book"
                                android:layout_width="3dp"
                                android:layout_height="3dp"
                                android:layout_marginLeft="6dp"
                                app:layout_constraintLeft_toRightOf="@+id/tab_domestic"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                android:background="@drawable/aikbd_mid_dot_gray"
                                android:layout_gravity="center_vertical"/>

                            <TextView
                                android:id="@+id/tab_book"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:text="도서"
                                android:includeFontPadding="false"
                                android:textSize="13dp"
                                android:gravity="center"
                                app:layout_constraintLeft_toRightOf="@+id/dot_left_book"
                                app:layout_constraintTop_toTopOf="parent"
                                android:layout_marginLeft="6dp"
                                android:textColor="#bfbfbf"/>

                            <View
                                android:id="@+id/dot_left_oversea"
                                android:layout_width="3dp"
                                android:layout_height="3dp"
                                android:visibility="gone"
                                android:layout_marginLeft="6dp"
                                app:layout_constraintLeft_toRightOf="@+id/tab_book"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                android:background="@drawable/aikbd_mid_dot_gray"
                                android:layout_gravity="center_vertical"/>

                            <TextView
                                android:id="@+id/tab_oversea"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:visibility="gone"
                                android:text="해외쇼핑"
                                android:includeFontPadding="false"
                                android:textSize="13dp"
                                android:gravity="center"
                                app:layout_constraintLeft_toRightOf="@+id/dot_left_oversea"
                                app:layout_constraintTop_toTopOf="parent"
                                android:layout_marginLeft="6dp"
                                android:textColor="#bfbfbf"/>

                            <View
                                android:id="@+id/dot_left_travel"
                                android:layout_width="3dp"
                                android:layout_height="3dp"
                                android:layout_marginLeft="6dp"
                                app:layout_constraintLeft_toRightOf="@+id/tab_oversea"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                android:background="@drawable/aikbd_mid_dot_gray"
                                android:layout_gravity="center_vertical"/>

                            <TextView
                                android:id="@+id/tab_travel"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:text="여행"
                                android:includeFontPadding="false"
                                android:textSize="13dp"
                                android:gravity="center"
                                android:textColor="#bfbfbf"
                                android:layout_marginLeft="6dp"
                                app:layout_constraintLeft_toRightOf="@+id/dot_left_travel"
                                app:layout_constraintTop_toTopOf="parent"/>
                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </HorizontalScrollView>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/tlt_layer"
                    android:layout_marginTop="9dp"
                    android:layout_marginLeft="13dp"
                    android:layout_marginRight="13dp"
                    android:orientation="vertical">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/shopping_recyclerview"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scrollbars="none"
                        android:overScrollMode="never"/>

                </LinearLayout>


            </RelativeLayout>
