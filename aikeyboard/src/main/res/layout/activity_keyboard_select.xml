                <View
                    android:layout_width="0dp"
                    android:layout_height="15dp"
                    android:background="#fff3d3"
                    app:layout_constraintBottom_toBottomOf="@+id/one_second_txt"
                    app:layout_constraintLeft_toLeftOf="@+id/one_second_txt"
                    app:layout_constraintRight_toRightOf="@+id/one_second_txt" />

