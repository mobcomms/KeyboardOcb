            <View
                android:layout_width="0dp"
                android:layout_height="15dp"
                android:background="#fff3d3"
                app:layout_constraintBottom_toBottomOf="@+id/two_second_txt"
                app:layout_constraintLeft_toLeftOf="@+id/two_second_txt"
                app:layout_constraintRight_toRightOf="@+id/two_second_txt"/>

            <TextView
                android:id="@+id/two_second_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:text="OK캐쉬백 돈버는 키보드"
                android:textColor="#000000"
                android:textSize="22dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:text="를"
                android:textColor="#000000"
                android:textSize="22dp"
                app:layout_constraintBottom_toBottomOf="@+id/two_second_txt"
                app:layout_constraintLeft_toRightOf="@+id/two_second_txt"
                app:layout_constraintTop_toTopOf="@+id/two_second_txt" />

        </androidx.constraintlayout.widget.ConstraintLayout>


        <TextView
            android:id="@+id/two_third_line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/two_second_line"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="1dp"
            android:includeFontPadding="false"
            android:text="기본 키보드로 선택해주세요."
            android:textColor="#000000"
            android:textSize="22dp" />




        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="312dp"
            android:layout_height="190dp"
            android:layout_below="@+id/two_third_line"
            android:layout_marginTop="49dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/kb_onboarding_img_02_01">

            <ImageView
