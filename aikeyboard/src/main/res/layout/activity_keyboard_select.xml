                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:layout_marginBottom="14dp"
                        android:includeFontPadding="false"
                        android:text="포인트 적립"
                        android:textColor="#32261e"
                        android:textStyle="bold"
                        android:textSize="18dp"
