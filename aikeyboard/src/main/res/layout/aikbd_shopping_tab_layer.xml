<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/shopping_bottom_navigator"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true">


        <RelativeLayout
            android:id="@+id/shopping_first_tab"
            android:layout_width="60dp"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/shopping_first_img"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerInParent="true"
                android:background="@drawable/aikbd_kb_bar_keyboard_return_icon"/>

        </RelativeLayout>

        <View
            android:id="@+id/div"
            android:layout_width="1dp"
            android:layout_height="21dp"
            android:background="#e8e8ea"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/shopping_first_tab"/>

        <RelativeLayout
            android:id="@+id/shopping_second_tab"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/div"
            android:layout_alignParentRight="true">

            <View
                android:id="@+id/arrow"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:background="@drawable/aiibd_ico_12_arrow_gray_right"/>

            <TextView
                android:id="@+id/strGoShopping"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/arrow"
                android:text="검색 결과 더보기"
                android:textColor="#868686"
                android:textSize="13dp" />

        </RelativeLayout>

    </RelativeLayout>

    <TextView
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#e8e8e8"
        android:layout_above="@+id/shopping_bottom_navigator"/>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/searchScroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible"
        android:fillViewport="true"
        android:layout_above="@+id/line">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/shoppingRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="205dp"
                android:layout_centerInParent="true"
                android:scrollbars="none"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/sc_shopping_result"
                android:layout_width="match_parent"
                android:layout_height="206dp"
                android:layout_centerInParent="true"
                android:background="#ffffff"
                android:paddingLeft="24dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/headerLayer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginTop="24dp"
                    android:layout_marginBottom="10dp">

                    <TextView
                        android:id="@+id/headerTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:includeFontPadding="false"
                        android:text="쇼핑 검색 결과"
                        android:textStyle="bold"
                        android:textSize="14dp"
                        android:textColor="#000000"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        app:layout_constraintLeft_toLeftOf="@+id/headerTitle"
                        app:layout_constraintRight_toRightOf="@+id/headerTitle"
                        app:layout_constraintTop_toBottomOf="@+id/headerTitle"
                        android:layout_marginTop="2dp"
                        android:background="#000000"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <View
                    android:id="@+id/sc_image1"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginTop="20dp"
                    app:layout_constraintTop_toBottomOf="@+id/headerLayer"
                    app:layout_constraintLeft_toLeftOf="@+id/headerLayer"
                    android:background="@drawable/timedeal_sc"/>

                <View
                    android:id="@+id/line1"
                    android:layout_width="0dp"
                    android:layout_height="16dp"
                    android:background="#f6f6f6"
                    app:layout_constraintTop_toTopOf="@+id/sc_image1"
                    app:layout_constraintLeft_toRightOf="@+id/sc_image1"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="46dp"/>

                <View
                    android:id="@+id/line2"
                    android:layout_width="0dp"
                    android:layout_height="16dp"
                    android:background="#f6f6f6"
                    app:layout_constraintTop_toBottomOf="@+id/line1"
                    app:layout_constraintLeft_toLeftOf="@+id/line1"
                    app:layout_constraintRight_toRightOf="@+id/line1"
                    android:layout_marginTop="6dp"/>

                <View
                    android:id="@+id/line3"
                    android:layout_width="0dp"
                    android:layout_height="16dp"
                    android:background="#f6f6f6"
                    app:layout_constraintTop_toBottomOf="@+id/line2"
                    app:layout_constraintLeft_toLeftOf="@+id/line1"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="166dp"/>

                <View
                    android:id="@+id/sc_image2"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginTop="21dp"
                    app:layout_constraintTop_toBottomOf="@+id/sc_image1"
                    app:layout_constraintLeft_toLeftOf="@+id/headerLayer"
                    android:background="@drawable/timedeal_sc"/>

                <View
                    android:id="@+id/line4"
                    android:layout_width="0dp"
                    android:layout_height="16dp"
                    android:background="#f6f6f6"
                    app:layout_constraintTop_toTopOf="@+id/sc_image2"
                    app:layout_constraintLeft_toRightOf="@+id/sc_image2"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="46dp"/>

                <View
                    android:id="@+id/line5"
                    android:layout_width="0dp"
                    android:layout_height="16dp"
                    android:background="#f6f6f6"
                    app:layout_constraintTop_toBottomOf="@+id/line4"
                    app:layout_constraintLeft_toLeftOf="@+id/line4"
                    app:layout_constraintRight_toRightOf="@+id/line4"
                    android:layout_marginTop="6dp"/>

                <View
                    android:id="@+id/line6"
                    android:layout_width="0dp"
                    android:layout_height="16dp"
                    android:background="#f6f6f6"
                    app:layout_constraintTop_toBottomOf="@+id/line5"
                    app:layout_constraintLeft_toLeftOf="@+id/line1"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="166dp"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </RelativeLayout>

    </androidx.core.widget.NestedScrollView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/searchNoData"
        android:textColor="#868686"
        android:textSize="14dp"
        android:includeFontPadding="false"
        android:layout_above="@+id/line"
        android:text="검색 결과가 없습니다.\n다른 검색어를 시도해주세요."
        android:visibility="gone"
        android:gravity="center"/>

</RelativeLayout>