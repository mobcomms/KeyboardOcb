<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:CircleProgressView="http://schemas.android.com/apk/res-auto"
    xmlns:wheel="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/root"
    android:background="#FFFFFFFF">

    <RelativeLayout
        android:id="@+id/top_layer"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:background="#ffffff"
        android:paddingRight="16dp">

        <RelativeLayout
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="20dp"
            android:paddingRight="8dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@drawable/aikbd_ico_32_arrow_left" />

        </RelativeLayout>



        <TextView
            android:id="@+id/main_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/btn_back"
            android:text="키보드 테마"
            android:textColor="#000000"
            android:textSize="18dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/btn_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/aikbd_ico_32_home" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:id="@+id/cat_layer"
        android:layout_below="@+id/top_layer">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/category_layer">

            <RelativeLayout
                android:layout_width="56dp"
                android:layout_height="match_parent"
                android:id="@+id/btn_search"
                android:visibility="gone"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/aikbd_theme_black_search_icon"/>

            </RelativeLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/categoryRecyclerView"
                android:overScrollMode="never"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/btn_search"
                app:layout_constraintTop_toTopOf="parent"
                android:scrollbars="none"/>

        </androidx.constraintlayout.widget.ConstraintLayout>



        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:id="@+id/search_layer">

            <TextView
                android:id="@+id/cancel_search"
                android:layout_width="58dp"
                android:layout_height="match_parent"
                android:text="취소"
                android:gravity="center"
                android:textColor="#000000"
                android:includeFontPadding="false"
                android:textSize="14dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="34dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/cancel_search"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:background="@drawable/aikbd_theme_search_edit_bg"
                android:layout_marginStart="16dp"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/search_icon_layer"
                    android:layout_width="42dp"
                    android:layout_height="match_parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginStart="6dp"
                        android:layout_centerVertical="true"
                        android:background="@drawable/aikbd_theme_search_icon"/>

                </RelativeLayout>

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="34dp"
                    android:id="@+id/search_edit"
                    app:layout_constraintLeft_toRightOf="@+id/search_icon_layer"
                    app:layout_constraintRight_toLeftOf="@+id/btn_clear"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginStart="2dp"
                    android:textColor="#000000"
                    android:hint="검색어를 입력하세요"
                    android:textColorHint="#aaaaaa"
                    android:textSize="13dp"
                    android:gravity="center_vertical"
                    android:layout_gravity="center_vertical"
                    android:imeOptions="actionSearch"
                    android:inputType="text"
                    android:background="@null"/>

                <RelativeLayout
                    android:id="@+id/btn_clear"
                    android:layout_width="28dp"
                    android:paddingEnd="6dp"
                    android:layout_height="match_parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_marginStart="6dp"
                        android:layout_centerVertical="true"
                        android:background="@drawable/aikbd_theme_clear_edit"/>

                </RelativeLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </RelativeLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/themeRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/cat_layer"
        android:layout_above="@+id/match_container"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="22dp"
        android:background="#FFFFFFFF"
        android:overScrollMode="never"/>

    <RelativeLayout
        android:id="@+id/keyboard_layer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:visibility="gone">

        <com.enliple.keyboard.activity.LatinKeyboardView
            android:id="@+id/keyboard_view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/aikbd_key_height"
            android:keyPreviewHeight="@dimen/aikbd_key_height"
            android:keyPreviewLayout="@layout/aikbd_preview"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_above="@+id/btn_layer">


        <TextView
            android:id="@+id/hide_kbd_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/aikbd_btn_theme_down"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/match_container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/aikbd_ad_height"
        android:layout_above="@+id/keyboard_layer">

        <!--<TextView-->
        <!--android:id="@+id/top_line"-->
        <!--android:layout_width="match_parent"-->
        <!--android:visibility="gone"-->
        <!--android:layout_height="@dimen/aikbd_keyboard_top_line"-->
        <!--android:background="#d9d9d8" />-->

        <TextView
            android:id="@+id/top_line"
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_height="1dp" />

        <LinearLayout
            android:id="@+id/top_btn_layer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/top_line"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/first_tab"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:soundEffectsEnabled="false">

                <ImageView
                    android:id="@+id/img_first"
                    android:layout_width="35dp"
                    android:layout_height="30dp"
                    android:layout_centerInParent="true" />

                <TextView
                    android:id="@+id/matched_emoji"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:maxLines="1"
                    android:textColor="#000000"
                    android:textSize="24dp" />

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_centerInParent="true" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/timedeal_tab"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:soundEffectsEnabled="false">

                <ImageView
                    android:id="@+id/img_timedeal"
                    android:layout_width="35dp"
                    android:layout_height="30dp"
                    android:layout_centerInParent="true" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/shopping_tab"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:soundEffectsEnabled="false">

                <ImageView
                    android:id="@+id/img_shopping"
                    android:layout_width="35dp"
                    android:layout_height="30dp"
                    android:visibility="gone"
                    android:layout_centerInParent="true" />

                <RelativeLayout
                    android:id="@+id/offerwall_tab"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:soundEffectsEnabled="false">

                    <ImageView
                        android:id="@+id/img_offerwall"
                        android:layout_width="35dp"
                        android:layout_height="30dp"
                        android:layout_centerInParent="true"
                        android:background="@drawable/aikbd_btn_ppzon_icon" />

                </RelativeLayout>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/game_tab"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:visibility="gone"
                android:soundEffectsEnabled="false">

                <ImageView
                    android:id="@+id/img_game"
                    android:layout_width="35dp"
                    android:layout_height="30dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/aikbd_btn_save_gamezone_icon" />


            </RelativeLayout>

<!--            <RelativeLayout-->
<!--                android:id="@+id/chat_tab"-->
<!--                android:layout_width="0dp"-->
<!--                android:layout_height="match_parent"-->
<!--                android:layout_weight="1"-->
<!--                android:soundEffectsEnabled="false">-->

<!--                <ImageView-->
<!--                    android:id="@+id/img_chat"-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:layout_centerInParent="true"-->
<!--                    android:background="@drawable/aikbd_chat_gpt_normal" />-->


<!--            </RelativeLayout>-->

            <RelativeLayout
                android:id="@+id/second_tab"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:soundEffectsEnabled="false">

                <ImageView
                    android:id="@+id/img_second"
                    android:layout_width="39dp"
                    android:layout_height="30dp"
                    android:layout_centerInParent="true" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/fourth_tab"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:soundEffectsEnabled="false">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true">

                    <ImageView
                        android:id="@+id/img_fourth"
                        android:layout_width="35dp"
                        android:layout_height="30dp"
                        android:layout_centerInParent="true" />


                </RelativeLayout>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/more_tab"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:soundEffectsEnabled="false">

                <RelativeLayout
                    android:id="@+id/for_anim"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true">

                    <ImageView
                        android:id="@+id/img_more"
                        android:layout_width="35dp"
                        android:layout_height="30dp"
                        android:layout_centerInParent="true" />

                    <TextView
                        android:id="@+id/base"
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_below="@+id/img_more" />

                </RelativeLayout>

            </RelativeLayout>

        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/btn_layer"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_above="@+id/match_container"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:weightSum="2">

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="0"
            android:background="@drawable/aikbd_gray_btn_selector"
            android:text="@string/aikbd_cancel"
            android:textColor="@color/aikbd_white"
            android:textSize="@dimen/aikbd_btn_text_size"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_next"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_toRightOf="@+id/btn_cancel"
            android:layout_weight="2"
            android:background="@color/aikbd_btn_blue"
            android:text="@string/aikbd_next"
            android:textColor="@color/aikbd_white"
            android:textSize="@dimen/aikbd_btn_text_size"
            android:textStyle="bold" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/progress_layer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:background="#bb000000">

        <ImageView
            android:id="@+id/ocb_loading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/aikbd_ocb_loading_anim"/>

    </RelativeLayout>

    <com.enliple.keyboard.common.ProgressWheel
        android:id="@+id/progress"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:visibility="gone"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        wheel:matProg_barColor="#5588FF"
        wheel:matProg_progressIndeterminate="true" />

</RelativeLayout>