<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#ffffff"
    android:paddingLeft="24dp"
    android:paddingRight="24dp"
    android:paddingTop="16dp"
    android:paddingBottom="16dp">

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/icon"
        android:background="@drawable/aikbd_btn_gpt_icon"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:background="@drawable/chat_gpt_header_text_bg"
        app:layout_constraintLeft_toRightOf="@+id/icon"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="11dp"
        android:paddingBottom="11dp"
        android:text="ChatGPT 이렇게 대화할 수 있어요!\n · 재미있는 판타지 소설 만들어줘\n · 제주도 3박 4일 여행일정 세워줘\n\n대화를 시작하려면 ChatGPT\n이용권 받기를 선택해 주세요"
        android:textSize="14dp"
        android:textColor="#868686"
        android:includeFontPadding="false"/>


</androidx.constraintlayout.widget.ConstraintLayout>