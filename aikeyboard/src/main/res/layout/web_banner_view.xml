<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/en_web_banner_root"
    android:background="#80000000">

    <LinearLayout
        android:id="@+id/en_web_banner_layout"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/web_radius"
        android:orientation="vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingBottom="15dp">

        <Button
            android:id="@+id/banner_close"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_gravity="right"
            android:layout_marginRight="-5dp"
            android:background="@drawable/en_terms_detail_close" />



        <androidx.cardview.widget.CardView
            android:id="@+id/ad_container"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/web_radius"
            app:cardCornerRadius="20dp"
            app:cardElevation="0dp">

            <com.enliple.keyboard.ad.webview.SDKWebView
                android:id="@+id/ad_web"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/banner_click"
            android:layout_width="250dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:background="@drawable/web_btn_radius"
            android:backgroundTint="#f35f5c"
            android:gravity="center"
            android:text="광고 보고 혜택 받기"
            android:textColor="#ffffff"
            android:textSize="18dp"
            android:textStyle="bold" />

    </LinearLayout>

    <RelativeLayout
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/web_radius"
        android:visibility="gone"
        android:id="@+id/point_loading_view"
        android:layout_width="280dp"
        android:layout_height="375dp">

        <!-- ProgressBar (로딩 인디케이터) -->
        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:indeterminate="true" />

        <!-- TextView (적립중입니다 텍스트) -->
        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/progressBar"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:text="포인트 적립중입니다...."
            android:textSize="18sp"
            android:textColor="#000" />
    </RelativeLayout>

</RelativeLayout>