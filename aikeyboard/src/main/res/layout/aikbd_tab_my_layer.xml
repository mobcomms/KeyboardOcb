    <RelativeLayout
        android:id="@+id/my_bottom_navigator"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#ffffff"
        android:layout_alignParentBottom="true">

        <RelativeLayout
            android:id="@+id/my_first_tab"
            android:layout_width="60dp"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/my_first_img"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerInParent="true"
                android:background="@drawable/aikbd_kb_bar_keyboard_return_icon"/>

        </RelativeLayout>

        <View
            android:id="@+id/div"
            android:layout_width="1dp"
            android:layout_height="21dp"
            android:layout_centerVertical="true"
            android:background="#e8e8ea"
            android:layout_toRightOf="@+id/my_first_tab"/>

        <RelativeLayout
            android:id="@+id/my_second_tab"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/div"
            android:layout_alignParentRight="true">

            <View
                android:id="@+id/arrow"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:background="@drawable/aiibd_ico_12_arrow_gray_right"/>

            <TextView
                android:id="@+id/strGoMyPoint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="내 포인트 바로가기"
                android:layout_toLeftOf="@+id/arrow"
                android:textSize="13dp"
                android:textColor="#868686" />

        </RelativeLayout>

    </RelativeLayout>

    <TextView
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#e8e8e8"
        android:layout_above="@+id/my_bottom_navigator"/>

