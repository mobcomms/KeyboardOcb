<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/my_layer"
                android:layout_width="match_parent"
                android:layout_height="205dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:paddingBottom="22dp">

                <TextView
                    android:id="@+id/surprise_tlt"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:gravity="center_vertical"
                    android:includeFontPadding="false"
                    android:textColor="#bfbfbf"
                    android:letterSpacing="-0.04"
                    android:textStyle="bold"
                    android:textSize="14dp"
                    android:text="깜짝! 미션 포인트"
                    android:layout_marginTop="24dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <View
                    android:layout_width="3dp"
                    android:layout_height="3dp"
                    android:id="@+id/mid_dot"
                    android:background="@drawable/aikbd_mid_dot_gray"
                    app:layout_constraintLeft_toRightOf="@+id/surprise_tlt"
                    app:layout_constraintTop_toTopOf="@+id/surprise_tlt"
                    app:layout_constraintBottom_toBottomOf="@+id/surprise_tlt"
                    android:layout_marginLeft="12dp"/>

                <TextView
                    android:id="@+id/myTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:gravity="center_vertical"
                    android:includeFontPadding="false"
                    android:letterSpacing="-0.04"
                    android:text="내 포인트"
                    android:textColor="#000000"
                    android:textSize="14dp"
                    android:textStyle="bold"
                    app:layout_constraintTop_toTopOf="@+id/surprise_tlt"
                    app:layout_constraintBottom_toBottomOf="@+id/surprise_tlt"
                    app:layout_constraintLeft_toRightOf="@+id/mid_dot"
                    android:layout_marginLeft="12dp"/>

                <View
                    android:id="@+id/base1"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:background="#000000"
                    android:layout_marginTop="2dp"
                    app:layout_constraintTop_toBottomOf="@+id/myTitle"
                    app:layout_constraintLeft_toLeftOf="@+id/myTitle"
                    app:layout_constraintRight_toRightOf="@+id/myTitle" />

                <View
                    android:layout_width="3dp"
                    android:layout_height="3dp"
                    android:id="@+id/mid_dot_1_1"
                    android:layout_marginLeft="12dp"
                    android:background="@drawable/aikbd_mid_dot_gray"
                    app:layout_constraintTop_toTopOf="@+id/surprise_tlt"
                    app:layout_constraintBottom_toBottomOf="@+id/surprise_tlt"
                    app:layout_constraintLeft_toRightOf="@+id/myTitle"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="@+id/surprise_tlt"
                    app:layout_constraintBottom_toBottomOf="@+id/surprise_tlt"
                    app:layout_constraintLeft_toRightOf="@+id/mid_dot_1_1"
                    android:id="@+id/tab_r_theme_1"
                    android:textSize="14dp"
                    android:textStyle="bold"
                    android:text="추천 테마"
                    android:includeFontPadding="false"
                    android:textColor="#bfbfbf"
                    android:layout_marginLeft="12dp"/>

                <LinearLayout
                    android:id="@+id/pt_layer"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:visibility="gone"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toTopOf="@+id/myTitle"
                    app:layout_constraintBottom_toBottomOf="@+id/myTitle"
                    app:layout_constraintRight_toRightOf="parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="6dp"
                        android:includeFontPadding="false"
                        android:textColor="#000000"
                        android:textSize="12dp"
                        android:text="OK 캐쉬백" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="2dp"
                        android:includeFontPadding="false"
                        android:textColor="#000000"
                        android:textSize="16dp"
                        android:textStyle="bold"
                        tools:text="5,000,000" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:includeFontPadding="false"
                        android:text="P"
                        android:textColor="#000000"
                        android:textSize="16dp"
                        android:textStyle="bold"
                        app:layout_constraintRight_toLeftOf="@+id/ocb_point_arrow"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>

                    <View
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:background="@drawable/aikbd_ico_12_arrow_right"
                        android:layout_marginTop="3dp"/>

                </LinearLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/p_layer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintLeft_toLeftOf="@+id/surprise_tlt"
                    app:layout_constraintTop_toBottomOf="@+id/base1"
                    android:layout_marginTop="20dp">

                    <TextView
                        android:id="@+id/tlt_keyboard_save"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14dp"
                        android:text="키보드 적립"
                        android:includeFontPadding="false"
                        android:textColor="#fe0955"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>

                    <TextView
                        android:id="@+id/tlt_today"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:includeFontPadding="false"
                        app:layout_constraintTop_toBottomOf="@+id/tlt_keyboard_save"
                        app:layout_constraintLeft_toLeftOf="@+id/tlt_keyboard_save"
                        android:textSize="12dp"
                        android:textColor="#ababab"
                        android:text="오늘"/>

                    <TextView
                        android:id="@+id/today_point"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="23dp"
                        tools:text="28"
                        android:includeFontPadding="false"
                        android:textColor="#fe0955"
                        android:textStyle="bold"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tlt_today"/>

                    <TextView
                        android:id="@+id/tp_unit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="23dp"
                        android:text="P"
                        android:includeFontPadding="false"
                        android:textColor="#fe0955"
                        android:textStyle="bold"
                        android:layout_marginLeft="4dp"
                        app:layout_constraintLeft_toRightOf="@+id/today_point"
                        app:layout_constraintTop_toTopOf="@+id/today_point"/>

                    <ImageView
                        android:id="@+id/slash"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/aikbd_key_point_icon_slash"
                        app:layout_constraintLeft_toRightOf="@+id/tp_unit"
                        app:layout_constraintTop_toTopOf="@+id/tp_unit"
                        app:layout_constraintBottom_toBottomOf="@+id/tp_unit"
                        android:layout_marginLeft="10dp"/>

                    <TextView
                        android:id="@+id/tlt_month"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:includeFontPadding="false"
                        app:layout_constraintTop_toBottomOf="@+id/tlt_keyboard_save"
                        app:layout_constraintLeft_toLeftOf="@+id/month_point"
                        android:textSize="12dp"
                        android:textColor="#ababab"
                        android:text="이번 달"/>

                    <TextView
                        android:id="@+id/month_point"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="23dp"
                        android:layout_marginLeft="10dp"
                        tools:text="112"
                        android:includeFontPadding="false"
                        android:textColor="#fe0955"
                        android:textStyle="bold"
                        app:layout_constraintLeft_toRightOf="@+id/slash"
                        app:layout_constraintTop_toBottomOf="@+id/tlt_today"/>

                    <TextView
                        android:id="@+id/mp_unit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="23dp"
                        android:text="P"
                        android:includeFontPadding="false"
                        android:textColor="#fe0955"
                        android:textStyle="bold"
                        android:layout_marginLeft="4dp"
                        app:layout_constraintLeft_toRightOf="@+id/month_point"
                        app:layout_constraintTop_toTopOf="@+id/month_point"/>

                    <ImageView
                        android:id="@+id/keyboard_arrow"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:background="@drawable/aikbd_ico_12_arrow_right_red"
                        app:layout_constraintLeft_toRightOf="@+id/mp_unit"
                        app:layout_constraintTop_toTopOf="@+id/mp_unit"
                        app:layout_constraintBottom_toBottomOf="@+id/mp_unit"
                        android:layout_marginLeft="6dp"/>

                    <TextView
                        android:id="@+id/tlt_cashbag"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14dp"
                        android:text="OK 캐쉬백"
                        android:includeFontPadding="false"
                        android:maxLines="1"
                        android:lines="1"
                        android:ellipsize="end"
                        android:textColor="#000000"
                        app:layout_constraintRight_toRightOf="@+id/ocb_unit"
                        app:layout_constraintTop_toTopOf="parent"/>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/point_layer"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_marginRight="4dp"
                        app:layout_constraintLeft_toRightOf="@+id/keyboard_arrow"
                        app:layout_constraintRight_toLeftOf="@+id/ocb_unit"
                        app:layout_constraintTop_toTopOf="@+id/tlt_keyboard_save"
                        app:layout_constraintBottom_toBottomOf="@+id/month_point">

                        <TextView
                            android:id="@+id/point"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:textSize="23dp"
                            tools:text="225,550"
                            android:includeFontPadding="false"
                            android:textColor="#000000"
                            android:textStyle="bold"
                            android:ellipsize="end"
                            android:gravity="right"
                            android:maxLines="1"/>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <TextView
                        android:id="@+id/ocb_unit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="23dp"
                        android:text="P"
                        android:includeFontPadding="false"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:layout_marginRight="5dp"
                        app:layout_constraintRight_toLeftOf="@+id/ocb_arrow"
                        app:layout_constraintBottom_toBottomOf="@+id/point_layer"/>

                    <ImageView
                        android:id="@+id/ocb_arrow"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:background="@drawable/aikbd_ico_12_arrow_right"
                        android:layout_marginRight="18dp"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/ocb_unit"
                        app:layout_constraintBottom_toBottomOf="@+id/ocb_unit"/>

                    <View
                        android:id="@+id/go_keyboard_save"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        app:layout_constraintTop_toTopOf="@+id/tlt_keyboard_save"
                        app:layout_constraintLeft_toLeftOf="@+id/tlt_keyboard_save"
                        app:layout_constraintRight_toRightOf="@+id/keyboard_arrow"
                        app:layout_constraintBottom_toBottomOf="@+id/mp_unit"/>


                    <View
                        android:id="@+id/go_ocb_save"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        app:layout_constraintTop_toTopOf="@+id/tlt_keyboard_save"
                        app:layout_constraintLeft_toLeftOf="@+id/point_layer"
                        app:layout_constraintRight_toRightOf="@+id/ocb_arrow"
                        app:layout_constraintBottom_toBottomOf="@+id/mp_unit"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:layout_marginTop="18dp"
                    android:background="#f6f6f6"
                    android:visibility="visible"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/p_layer">

                    <ImageView
                        android:id="@+id/barcode_icon"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="14dp"
                        android:background="@drawable/kb_my_barcode_icon"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/card_first"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="14dp"
                        android:includeFontPadding="false"
                        android:textColor="#000000"
                        android:textSize="14dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toRightOf="@+id/barcode_icon"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:text="1234" />

                    <TextView
                        android:id="@+id/card_second"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="9dp"
                        android:includeFontPadding="false"
                        android:textColor="#000000"
                        android:textSize="14dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toRightOf="@+id/card_first"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:text="1234" />

                    <TextView
                        android:id="@+id/card_third"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="9dp"
                        android:includeFontPadding="false"
                        android:textColor="#000000"
                        android:textSize="14dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toRightOf="@+id/card_second"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:text="1234" />

                    <TextView
                        android:id="@+id/card_fourth"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="9dp"
                        android:includeFontPadding="false"
                        android:textColor="#000000"
                        android:textSize="14dp"
                        android:maxLines="1"
                        android:ellipsize="end"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toRightOf="@+id/card_third"
                        app:layout_constraintRight_toLeftOf="@+id/cp_layer"
                        tools:text="1234"/>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/cp_layer"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintRight_toRightOf="parent">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            android:id="@+id/copy_layer">

                            <ImageView
                                android:id="@+id/copy_icon"
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:layout_marginRight="10dp"
                                android:background="@drawable/kb_my_copy_icon"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="2dp"
                                android:includeFontPadding="false"
                                android:text="복사"
                                android:textColor="#868686"
                                android:textSize="12dp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintLeft_toRightOf="@+id/copy_icon"
                                app:layout_constraintTop_toTopOf="parent" />

                        </androidx.constraintlayout.widget.ConstraintLayout>


                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </RelativeLayout>

    </androidx.core.widget.NestedScrollView>

</RelativeLayout>