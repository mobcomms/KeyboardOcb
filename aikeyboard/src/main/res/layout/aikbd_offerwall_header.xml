<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="166dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/aikbd_white">

    <LinearLayout
        android:id="@+id/offerwall_category"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:paddingTop="12dp"
        android:layout_alignParentBottom="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="16dp"
            android:id="@+id/btn_all">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:text="전체"
                android:id="@+id/text_all"
                android:includeFontPadding="false"
                android:textSize="16dp"
                android:textColor="#000000"
                android:textStyle="bold"/>

            <View
                android:id="@+id/line_all"
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:background="#000000"
                app:layout_constraintLeft_toLeftOf="@+id/text_all"
                app:layout_constraintRight_toRightOf="@+id/text_all"
                app:layout_constraintBottom_toBottomOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="16dp"
            android:id="@+id/btn_join">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:text="참여하기"
                android:id="@+id/text_join"
                android:includeFontPadding="false"
                android:textSize="16dp"
                android:textColor="#666666"
                android:textStyle="normal"/>

            <View
                android:id="@+id/line_join"
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:visibility="gone"
                android:background="#000000"
                app:layout_constraintLeft_toLeftOf="@+id/text_join"
                app:layout_constraintRight_toRightOf="@+id/text_join"
                app:layout_constraintBottom_toBottomOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/offerwall_category">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:includeFontPadding="false"
                android:text="적립 가능 포인트"
                android:textColor="#666666"
                android:textSize="12dp" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="29dp">

                <TextView
                    android:id="@+id/str_txt_title"
                    android:layout_width="wrap_content"
                    android:layout_height="28dp"
                    android:background="@drawable/aikbd_offerwall_red_line"
                    android:gravity="center"
                    android:paddingLeft="11dp"
                    android:paddingRight="11dp"
                    android:text="최대"
                    android:textColor="#fe1743"
                    android:textSize="12dp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@+id/txt_possible_point"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/txt_possible_point" />

                <TextView
                    android:id="@+id/txt_possible_point"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:paddingLeft="6dp"
                    android:textColor="#000000"
                    android:textSize="32dp"
                    android:textStyle="bold"
                    app:layout_constraintLeft_toRightOf="@+id/str_txt_title"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="127,845" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:paddingLeft="5dp"
                    android:text="P"
                    android:textColor="#000000"
                    android:textSize="16dp"
                    app:layout_constraintBaseline_toBaselineOf="@+id/txt_possible_point"
                    app:layout_constraintBottom_toBottomOf="@+id/txt_possible_point"
                    app:layout_constraintLeft_toRightOf="@+id/txt_possible_point" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>