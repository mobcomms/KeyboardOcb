<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="320dp"
    android:layout_height="100dp"
    android:layout_gravity="left"
    android:gravity="left">

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="2dp"
        android:background="@drawable/mobon_banner_sr_320x50_border" />

    <RelativeLayout
        android:id="@+id/logo_layout"
        android:layout_width="149dp"
        android:layout_height="match_parent"
        android:background="@color/white"
        >

        <ImageView
            android:id="@+id/blur_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:adjustViewBounds="true"
            android:contentDescription="" />




        <LinearLayout
            android:id="@+id/image_layout"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/mobon_banner_theme2_inner_border"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/t_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                android:adjustViewBounds="true"
                android:contentDescription="" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="22dp"
            android:layout_marginRight="-10dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/image_layout"
            android:background="@color/white">

            <ImageView
                android:id="@+id/mark_img"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="right|center_vertical"
                android:layout_margin="1dp"
                android:adjustViewBounds="true"
                android:contentDescription="" />
        </LinearLayout>

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/logo_layout"
        android:orientation="vertical">

        <TextView
            android:id="@+id/t_title"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="bottom|center_vertical"
            android:maxLines="1"
            android:textColor="@color/black"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/t_price"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.5"
            android:gravity="top|center_horizontal"
            android:maxLines="1"
            android:textColor="#f00"
            android:textSize="13dp"
            android:layout_margin="9dp"
            android:textStyle="bold" />
    </LinearLayout>


    <ImageView
        android:layout_width="38dp"
        android:layout_height="34dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:background="@drawable/mobon_banner_sr_320x100_go" />


    <ImageView
        android:id="@+id/mobon_mark"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="3dp"

        android:layout_marginLeft="3dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="3dp"
        android:layout_marginRight="3dp"
        android:layout_marginBottom="3dp"
        android:background="@drawable/btn_mobon" />
