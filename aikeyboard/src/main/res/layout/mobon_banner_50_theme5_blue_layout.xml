<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="left"
    android:adjustViewBounds="true"
    android:background="@drawable/mobon_banner_theme3_blue_border"
    android:gravity="left">

    <RelativeLayout
        android:id="@+id/logo_layout"
        android:layout_width="80dp"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/mark_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_margin="5dp"
            android:adjustViewBounds="true"
            android:contentDescription="" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/image_layout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_margin="1dp"
        android:minWidth="48dp"
        android:layout_toRightOf="@+id/logo_layout"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/t_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:contentDescription="" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="4dp"
        android:layout_toRightOf="@+id/image_layout"
        android:layout_toLeftOf="@+id/click_iv"
        android:orientation="vertical">

        <TextView
            android:id="@+id/t_title"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:textColor="@color/black"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/t_price"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="left"
            android:layout_weight="1"
            android:gravity="top|left"
            android:maxLines="1"
            android:textColor="#f00"
            android:textSize="15dp"
            android:layout_margin="2dp"
            android:textStyle="bold" />
    </LinearLayout>



        <ImageView
            android:id="@+id/click_iv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/mobon_banner_theme3_blue_click" />

        <ImageView
            android:id="@+id/mobon_mark"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_alignParentTop="true"
            android:background="@drawable/btn_mobon"
            android:layout_margin="3dp"
            android:layout_alignParentRight="true"
            />
