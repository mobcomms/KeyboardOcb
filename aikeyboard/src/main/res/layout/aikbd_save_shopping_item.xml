<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:layout_centerHorizontal="true"
        android:adjustViewBounds="true"
        android:id="@+id/image"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ico_n"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_marginRight="2dp"
            android:background="@drawable/kb_common_point_icon"
            app:layout_constraintRight_toLeftOf="@+id/rate"
            app:layout_constraintTop_toTopOf="@+id/str_save"
            app:layout_constraintBottom_toBottomOf="@+id/str_save"/>

        <TextView
            android:id="@+id/rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="2dp"
            android:includeFontPadding="false"
            android:textColor="#ff004e"
            android:textSize="13dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/str_save"
            app:layout_constraintRight_toLeftOf="@+id/str_save"
            app:layout_constraintTop_toTopOf="@+id/str_save"
            tools:text="2%" />

        <TextView
            android:id="@+id/str_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="적립"
            android:textColor="#828282"
            android:textSize="13dp"
            android:textStyle="normal"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</RelativeLayout>